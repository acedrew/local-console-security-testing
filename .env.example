# ==============================================================================
# Environment Configuration for PKI System (Podman Compose)
# ==============================================================================
# Copy this file to .env and customize as needed:
#   cp .env.example .env
# ==============================================================================

# -----------------------------------------------------------------------------
# Service Ports
# -----------------------------------------------------------------------------
PKI_PORT=8000
CONFIG_PORT=8501

# -----------------------------------------------------------------------------
# PKI Service Configuration
# -----------------------------------------------------------------------------
PKI_LOG_LEVEL=INFO
PKI_CERT_LIFETIME=3600  # Client certificate lifetime in seconds (1 hour)

# Certificate parameters
PKI_ROOT_CA_VALIDITY_DAYS=3650     # 10 years
PKI_INTERMEDIATE_CA_VALIDITY_DAYS=365  # 1 year
PKI_CLIENT_CERT_VALIDITY_HOURS=1   # 1 hour (short-lived)

# -----------------------------------------------------------------------------
# User/Group IDs (for rootless Podman)
# -----------------------------------------------------------------------------
# Set these to match your local user to avoid permission issues
UID=1000
GID=1000

# -----------------------------------------------------------------------------
# Data Directories (optional - defaults are relative paths)
# -----------------------------------------------------------------------------
# PKI_DATA_DIR=./data/pki
# CONFIG_DATA_DIR=./data/config
# LOG_DIR=./data/logs

# -----------------------------------------------------------------------------
# Development Options
# -----------------------------------------------------------------------------
# PYTHONUNBUFFERED=1  # Enable real-time Python logging
# RELOAD_ON_CHANGE=true  # Auto-reload on code changes (development)

# -----------------------------------------------------------------------------
# Timezone
# -----------------------------------------------------------------------------
TZ=UTC
